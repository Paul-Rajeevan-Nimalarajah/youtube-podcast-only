{
  "manifest_version": 3,
  "name": "YouTube Podcast Only",
  "version": "1.0.0",
  "description": "Show only podcast-style videos on YouTube Home feed",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}

